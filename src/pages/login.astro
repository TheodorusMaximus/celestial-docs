---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Access Required - Pipeline Vision">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 to-slate-100">
    <div class="max-w-lg w-full mx-4">
      <div class="bg-white rounded-lg shadow-xl p-8 border border-slate-200">
        <div class="text-center mb-8">
          <div class="mx-auto w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-slate-900 mb-2">
            Access Required
          </h1>
          <p class="text-slate-600">
            Please enter the password to access Pipeline Vision documentation
          </p>
        </div>

        <form id="loginForm" class="space-y-6">
          <div>
            <label for="password" class="block text-sm font-medium text-slate-700 mb-2">Password</label>
            <input
              id="password"
              name="password"
              type="password"
              required
              class="block w-full px-4 py-3 border border-slate-300 rounded-md placeholder-slate-400 text-slate-900 bg-white focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 text-base"
              placeholder="Enter access password"
              autocomplete="current-password"
            />
          </div>

          <div id="errorMessage" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md text-sm hidden">
          </div>

          <button
            type="submit"
            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200"
          >
            Access Documentation
          </button>
        </form>

        <div class="text-center text-slate-500 text-sm mt-6">
          <p>Session will remain active for 24 hours</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Configuration
  const CORRECT_PASSWORD = 'PipelineVision2024!';
  const SESSION_DURATION = 24 * 60 * 60 * 1000; // 24 hours
  const STORAGE_KEY = 'pipelineVisionAuth';

  // Check if already authenticated on page load
  function checkAuth() {
    const authData = localStorage.getItem(STORAGE_KEY);
    if (authData) {
      try {
        const { authenticated, expiresAt } = JSON.parse(authData);
        if (authenticated && Date.now() < expiresAt) {
          // Still authenticated, redirect to home
          window.location.href = '/';
          return;
        } else {
          // Session expired, clean up
          localStorage.removeItem(STORAGE_KEY);
        }
      } catch (error) {
        // Invalid data, clean up
        localStorage.removeItem(STORAGE_KEY);
      }
    }
  }

  // Handle form submission
  function handleLogin(event: Event) {
    event.preventDefault();
    
    const passwordInput = document.getElementById('password') as HTMLInputElement;
    const errorDiv = document.getElementById('errorMessage');
    
    if (!passwordInput || !errorDiv) {
      console.error('Required form elements not found');
      return;
    }
    
    const password = passwordInput.value;
    
    if (password === CORRECT_PASSWORD) {
      // Create session
      const authData = {
        authenticated: true,
        expiresAt: Date.now() + SESSION_DURATION
      };
      localStorage.setItem(STORAGE_KEY, JSON.stringify(authData));
      
      // Redirect to home page
      window.location.href = '/';
    } else {
      // Show error
      errorDiv.textContent = 'Invalid password. Please try again.';
      errorDiv.classList.remove('hidden');
      
      // Clear password field
      passwordInput.value = '';
    }
  }

  // Initialize
  checkAuth();
  const loginForm = document.getElementById('loginForm');
  if (loginForm) {
    loginForm.addEventListener('submit', handleLogin);
  }
</script>

<style>
  /* Ensure full height layout */
  html, body {
    height: 100%;
  }
</style>