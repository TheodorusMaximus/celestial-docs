---
import { SITE } from "@/config";
import Disclaimer from "@/components/ui/Disclaimer.astro";

// To pass the tailwindcss classes to the astro component
const { class: className } = Astro.props;
---

<footer class:list={["py-8 px-6 w-full", className]}>
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <!-- Logo & Title -->
      <div class="flex items-center gap-3">
        <img src="/logo.svg" alt="Pipeline Vision Logo" class="w-8 h-8" />
        <span class="text-lg font-bold text-foreground font-display">
          {SITE.title}
        </span>
      </div>
      
      <!-- Links -->
      <div class="flex items-center gap-6 text-sm text-muted-foreground">
        <a href="/project-overview" class="hover:text-foreground transition-colors">
          Documentation
        </a>
        <a href={SITE.repo} target="_blank" class="hover:text-foreground transition-colors">
          GitHub
        </a>
        <span class="text-muted-foreground/70">
          Â© 2025 {SITE.author}
        </span>
      </div>
    </div>
    
    <!-- Disclaimer -->
    <Disclaimer variant="footer" />
  </div>
</footer>
